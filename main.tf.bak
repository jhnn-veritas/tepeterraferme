terraform {
  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 5.0"
    }
  }

  backend "s3" {
    # REMPLACE PAR TON NOM DE BUCKET RÉEL (celui créé sur le site AWS)
    bucket         = "terraform-state-johann-cesi-tp-2026" 
    key            = "global/s3/terraform.tfstate"
    region         = "us-east-1"
    dynamodb_table = "terraform-locks"
    encrypt        = true
  }
}

provider "aws" {
  region = "us-east-1"
}